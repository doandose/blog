= hb 'if showPagination' do
  %div{ class: 'pagination pagination-centered' }
    %ul
      %li{ bind: { class: 'hasPrevious::disabled'}}
        %a{ :_action => 'goToPreviousPage'} &laquo anterior

      = hb 'if showBeforeEllipsis' do
        =hb 'pagination-page page=1 currentPage=page'
        %li.disabled
          %a &hellip;

      = hb 'each pageNumber in visiblePages' do
        =hb 'pagination-page page=pageNumber currentPage=page'

      = hb 'if showAfterEllipsis' do
        =hb 'pagination-page page=lastPage currentPage=page'
        %li.disabled
          %a &hellip;

      %li{ bind: { class: 'hasNext::disabled'}}
        %a{ :_action => 'goToNextPage'} pr√≥xima &raquo